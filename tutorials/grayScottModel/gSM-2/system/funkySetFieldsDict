FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      funkySetFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

expressions
(
    //- Linear distribution only valid for the domain 0 - 1 m
    kDistribution
    {
        field k;
        expression "(0.07-0.045)*(pos().x-1) + 0.07";
    }

    fDistribution
    {
        field f;
        expression "(0.1-0.01)*(pos().x-1) + 0.1";
    }
);
